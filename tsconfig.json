{
    "compilerOptions": {
      "esModuleInterop": true,
      "isolatedModules": true,
      "lib": ["ESNext", "dom"],
      "noEmit": true,
      "noImplicitAny": true,
      "noImplicitReturns": false,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noUncheckedIndexedAccess": true,
      "skipLibCheck": true,
      "strict": true,
    },
    "include": ["./src"],
    "exclude": ["dist", "node_modules", "tests", "examples"]
  }